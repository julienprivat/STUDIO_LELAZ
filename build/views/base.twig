<!DOCTYPE html>
<html lang="en">
<head>
	{% include 'html-head.twig' %}
</head>
<body class="body" data-theme="light">
	<div class="root">
		{% include 'preloader.twig' %}
		{% include 'header.twig' %}
		<main id="content">
			{% block content %}{% endblock %}
		</main>
		{% include 'footer.twig' %}
		<script>
			window.__WP_VARS = {
				THEME_URI: '{{site.theme.uri}}',
				BASE_URL: '{{site.url}}',
				RELATIVE_BASE_URL: '{{site.url|relative}}',
			}
		</script>
		<script src="{{site.theme.link}}/bundle.js?key={{random(50, 1000)}}" defer></script>

	</div>
	{{ wp_footer }}
</body>
</html>